<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">

    <TextView
            android:layout_marginLeft="5dip"
            android:layout_marginTop="30dip"
            android:id="@+id/text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="是否自动开锁"
            android:textSize="18dip"/>

    <com.example.Bluetooth.SwitchButton
            android:layout_marginTop="30dip"
            android:layout_alignRight="@id/text"
            android:layout_marginRight="20dip"
            android:id="@+id/switch_button"
            style="@style/holo_SwitchStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:textSize="18dip"
            android:layout_alignTop="@id/switch_button"
            android:id="@+id/delay"
            android:layout_marginTop="60dip"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="200dip"
            />

    <Spinner
            android:layout_marginRight="20dip"
            android:layout_marginTop="80dip"
            android:layout_alignRight="@id/delay"
            android:id="@+id/spinner"
            android:layout_width="120dip"
            android:layout_height="40dip"
            />
    <ImageView
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:layout_alignTop="@id/spinner"
            android:layout_marginTop="50dip"
            android:scaleType="centerInside"
            android:layout_width="500dip"
            android:layout_height="300dip"
            android:id="@+id/image"/>

    <Button
            android:layout_marginTop="440dip"
            android:layout_height="50dip"
            android:layout_width="100dip"
            android:text="设置Key"

            android:id="@+id/settingBt"/>

    <Button

            android:layout_marginLeft="200dip"
            android:layout_height="50dip"
            android:layout_width="100dip"
            android:layout_marginTop="440dip"
            android:text="保存Key"
            android:id="@+id/sendBt"/>


</RelativeLayout>